    <script>
    document.addEventListener('DOMContentLoaded', () => {
        // --- Utilidad de Voz ---
        const synth = window.speechSynthesis;
        function speak(text) {
            if (synth.speaking) {
                console.error('SpeechSynthesis.speaking');
                return;
            }
            if (text !== '') {
                const utterThis = new SpeechSynthesisUtterance(text);
                utterThis.lang = 'en-US';
                utterThis.pitch = 1.2;
                utterThis.rate = 0.9;
                synth.speak(utterThis);
            }
        }

        // --- Datos del Juego ---
        const foodItems = [
            { name: 'apple', emoji: 'üçé' },
            { name: 'banana', emoji: 'üçå' },
            { name: 'sandwich', emoji: 'ü•™' },
            { name: 'juice', emoji: 'üßÉ' },
            { name: 'water', emoji: 'üíß' },
            { name: 'salad', emoji: 'ü•ó' },
            { name: 'cheese', emoji: 'üßÄ' },
            { name: 'chicken', emoji: 'üçó' },
            { name: 'pizza', emoji: 'üçï' },
            { name: 'yogurt', emoji: 'üç¶' }
        ];

        // --- 1. Juego de Memoria (Vocabulary) ---
        const memoryGameBoard = document.getElementById('memory-game-board');
        const resetMemoryGameBtn = document.getElementById('reset-memory-game');
        let flippedCards = [];
        let matchedPairs = 0;
        let lockBoard = false;

        function createMemoryBoard() {
            memoryGameBoard.innerHTML = '';
            matchedPairs = 0;
            const cardData = [...foodItems, ...foodItems].sort(() => 0.5 - Math.random());
            
            cardData.forEach(item => {
                const card = document.createElement('div');
                card.classList.add('game-card', 'h-24', 'md:h-28');
                card.dataset.name = item.name;
                card.innerHTML = `
                    <div class="card-inner">
                        <div class="card-face card-front">?</div>
                        <div class="card-back">
                            <span class="emoji">${item.emoji}</span>
                            <span class="font-bold text-center">${item.name}</span>
                        </div>
                    </div>
                `;
                card.addEventListener('click', flipCard);
                memoryGameBoard.appendChild(card);
            });
        }

        function flipCard() {
            if (lockBoard) return;
            if (this === flippedCards[0]) return;
            this.classList.add('flipped');
            if (flippedCards.length === 0) {
                flippedCards.push(this);
                return;
            }
            flippedCards.push(this);
            lockBoard = true;
            checkForMatch();
        }

        function checkForMatch() {
            const [card1, card2] = flippedCards;
            const isMatch = card1.dataset.name === card2.dataset.name;
            isMatch ? disableCards() : unflipCards();
        }

        function disableCards() {
            flippedCards.forEach(card => card.removeEventListener('click', flipCard));
            speak(flippedCards[0].dataset.name);
            matchedPairs++;
            if (matchedPairs === foodItems.length) {
                setTimeout(() => {
                    alert('¬°Felicidades! ¬°Encontraste todos los pares!');
                    speak('Congratulations! You found them all!');
                }, 500);
            }
            resetBoard();
        }

        function unflipCards() {
            setTimeout(() => {
                flippedCards.forEach(card => card.classList.remove('flipped'));
                resetBoard();
            }, 1200);
        }

        function resetBoard() {
            [flippedCards, lockBoard] = [[], false];
        }

        resetMemoryGameBtn.addEventListener('click', createMemoryBoard);

        // --- 2. Juego de N√∫meros (11-20) - ACTUALIZADO ---
        const numberItemDisplay = document.getElementById('number-item-display');
        const numberQuestion = document.getElementById('number-question');
        const numberOptionsContainer = document.getElementById('number-options');
        const numberFeedback = document.getElementById('number-feedback');
        const numberWords = {
            11: 'eleven', 12: 'twelve', 13: 'thirteen', 14: 'fourteen', 15: 'fifteen',
            16: 'sixteen', 17: 'seventeen', 18: 'eighteen', 19: 'nineteen', 20: 'twenty'
        };
        const allNumberWords = Object.values(numberWords);
        let correctNumberWord;

        function setupNumberGame() {
            const correctNumber = Math.floor(Math.random() * 10) + 11; // 11 a 20
            correctNumberWord = numberWords[correctNumber];

            numberItemDisplay.textContent = correctNumber;
            numberQuestion.textContent = 'How do you write this number?';
            numberFeedback.textContent = '';
            numberFeedback.classList.add('opacity-0', 'scale-90');

            const options = new Set([correctNumberWord]);
            while (options.size < 3) {
                const randomWord = allNumberWords[Math.floor(Math.random() * allNumberWords.length)];
                options.add(randomWord);
            }

            const shuffledOptions = Array.from(options).sort(() => 0.5 - Math.random());
            numberOptionsContainer.innerHTML = '';
            shuffledOptions.forEach(opt => {
                const button = document.createElement('button');
                button.classList.add('btn', 'bg-sky-500', 'text-white', 'font-bold', 'py-3', 'px-5', 'rounded-full', 'text-lg', 'md:text-xl');
                button.textContent = opt;
                button.addEventListener('click', checkNumberAnswer);
                numberOptionsContainer.appendChild(button);
            });
        }

        function checkNumberAnswer(e) {
            const selectedWord = e.target.textContent;
            numberFeedback.classList.remove('opacity-0', 'scale-90');
            if (selectedWord === correctNumberWord) {
                numberFeedback.textContent = 'Correct! üéâ';
                numberFeedback.classList.remove('text-red-500');
                numberFeedback.classList.add('text-green-500');
                speak(correctNumberWord);
                setTimeout(setupNumberGame, 1500);
            } else {
                numberFeedback.textContent = 'Try again! ‚ùå';
                numberFeedback.classList.remove('text-green-500');
                numberFeedback.classList.add('text-red-500');
            }
        }

        // --- 3. Juego "Have you got...?" ---
        const lunchboxContentsEl = document.getElementById('lunchbox-contents');
        const haveGotQuestionEl = document.getElementById('have-got-question');
        const haveGotAnswersEl = document.getElementById('have-got-answers');
        const haveGotFeedbackEl = document.getElementById('have-got-feedback');
        const nextHaveGotBtn = document.getElementById('next-have-got');
        let lunchboxItems = [];
        let currentQuestionItem;
        let isItemInLunchbox;

        function setupHaveGotGame() {
            haveGotFeedbackEl.textContent = '';
            haveGotFeedbackEl.classList.add('opacity-0', 'scale-90');
            const shuffledFoods = foodItems.sort(() => 0.5 - Math.random());
            lunchboxItems = shuffledFoods.slice(0, 3);
            lunchboxContentsEl.innerHTML = lunchboxItems.map(item => `<span>${item.emoji}</span>`).join('');

            const shouldAskAboutPresentItem = Math.random() > 0.5;
            if (shouldAskAboutPresentItem) {
                currentQuestionItem = lunchboxItems[Math.floor(Math.random() * lunchboxItems.length)];
                isItemInLunchbox = true;
            } else {
                const absentItems = foodItems.filter(item => !lunchboxItems.includes(item));
                currentQuestionItem = absentItems[Math.floor(Math.random() * absentItems.length)];
                isItemInLunchbox = false;
            }
            
            const questionText = `Have you got a ${currentQuestionItem.name}?`;
            haveGotQuestionEl.textContent = questionText;
            speak(questionText);
        }

        haveGotAnswersEl.addEventListener('click', (e) => {
            if (e.target.tagName !== 'BUTTON') return;
            const answer = e.target.dataset.answer;
            haveGotFeedbackEl.classList.remove('opacity-0', 'scale-90');
            
            if ((answer === 'yes' && isItemInLunchbox) || (answer === 'no' && !isItemInLunchbox)) {
                haveGotFeedbackEl.textContent = 'Correct! ‚úÖ';
                haveGotFeedbackEl.classList.remove('text-red-500');
                haveGotFeedbackEl.classList.add('text-green-500');
                speak('Correct!');
            } else {
                haveGotFeedbackEl.textContent = 'Incorrect! Try the next one. ‚ùå';
                haveGotFeedbackEl.classList.remove('text-green-500');
                haveGotFeedbackEl.classList.add('text-red-500');
                speak('Incorrect');
            }
            setTimeout(setupHaveGotGame, 2000);
        });
        
        nextHaveGotBtn.addEventListener('click', setupHaveGotGame);

        // --- 4. Actividad "I like / I don't like" ---
        const likeFoodItemEl = document.getElementById('like-food-item');
        const likeGameEl = document.getElementById('like-game');
        const likeSentenceEl = document.getElementById('like-sentence');
        const nextLikeFoodBtn = document.getElementById('next-like-food');

        function setupLikeGame() {
            const randomFood = foodItems[Math.floor(Math.random() * foodItems.length)];
            likeFoodItemEl.textContent = randomFood.emoji;
            likeFoodItemEl.dataset.name = randomFood.name;
            likeSentenceEl.textContent = '';
        }

        likeGameEl.addEventListener('click', (e) => {
            const choice = e.target.closest('button')?.dataset.choice;
            if (!choice) return;
            const foodName = likeFoodItemEl.dataset.name;
            let sentence = (choice === 'like') ? `I like ${foodName}.` : `I don't like ${foodName}.`;
            likeSentenceEl.textContent = sentence;
            speak(sentence);
        });
        
        nextLikeFoodBtn.addEventListener('click', setupLikeGame);

        // --- Inicializar todos los juegos ---
        createMemoryBoard();
        setupNumberGame();
        setupHaveGotGame();
        setupLikeGame();
    });
    </script>
</body>
</html>
```
He realizado el cambio en la secci√≥n de los n√∫meros. Los otros juegos permanecen igual.

Si se te ocurre alguna otra modificaci√≥n o necesitas a√±adir m√°s actividades, no dudes en dec√≠rmelo. ¬°Estoy aqu√≠ para ayud
